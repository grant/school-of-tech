buttonColor = COLOR_PINK
outlineOffset = 10px
buttonBorderRadius = 2px
buttonBorderWidth = 1px

// Extra attributes
// .bordered - almost transparent with white border
// .small - small button
// .large - large button
.Button
  position: relative
  color COLOR_TEXT_WHITE
  cursor pointer
  text-transform uppercase
  border-radius buttonBorderRadius
  transition background-color TRANSITION_NORMAL

  &:not(.bordered)
    background-color buttonColor
    border none
  &:hover
    background-color lighten(buttonColor, 10)
  &:focus
    outline none
    background-color black
  &.bordered
    background-color rgba(COLOR_WHITE, 0.1)
    border buttonBorderWidth solid COLOR_WHITE
    &:hover
      background-color rgba(COLOR_WHITE, 0.3)
  &.small
    &:after
      left: - (outlineOffset / 2);
      top: (outlineOffset / 2);
  &:after
    content: '';
    position: absolute;
    z-index: -1;
    border buttonBorderWidth solid rgba(COLOR_WHITE, 0.4)
    left: - outlineOffset;
    top: outlineOffset;
    width: 100%;
    height: 100%;
